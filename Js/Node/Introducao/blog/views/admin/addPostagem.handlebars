<h2>Cadastro de categoria</h2>



<div class="card">
    <div class="card-body">
    <form action="/admin/postagens/add" method="post">
        <label for="nome">Título:</label>
        <input type="text" placeholder="título" name="titulo" class="form-control">
      
        <label for="nome">Slug:</label>
        <input type="text" placeholder="slug" name="slug" class="form-control">

        <label for="nome">Slug:</label>
        <input type="text" placeholder="slug" name="slug" class="form-control">

        <label for="nome">Descrição:</label>
        <input type="text" placeholder="descricao" name="descricao" class="form-control">

        <label for="">Categorias</label>
        <select name="categoria" id="" class="custom-select">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0" disabled>Sem categorias registradas</option>
            {{/each}}
        </select>

        <label for="nome">Conteúdo:</label>
        <textarea type="text" placeholder="conteudo" name="conteudo" class="form-control"></textarea>

        <button type="submit" class="btn btn-success mt-1">Criar categoria</button>
    </form>
</div>
</div>