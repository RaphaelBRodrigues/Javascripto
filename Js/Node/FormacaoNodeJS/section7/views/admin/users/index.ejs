<%- include("../../partials/header.ejs") %>
<body>
<%- include("../../partials/nav.ejs") %>


<div class="container mt-5">
    <hr>
    <h1 class="mb-3">Usuários</h1>
    <a class="btn btn-success mb-5" href="/admin/users/create"">Criar novo usuário</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user)=>{ %>
        <tr>
            <th>
                <%= user.id %>
            </th>
            <th>
                <%= user.email %>
            </th>

        </tr>
        <%  }) %>
        </tbody>
    </table>
</div>



</body>
<%- include("../../partials/footer.ejs") %>

<script>
    function deleteConfirm(event){
        event.preventDefault();
        const deleteCategory = confirm("Deseja deletar a categoria");
        if(deleteCategory){
            event.target.submit();
        }
    }
</script>