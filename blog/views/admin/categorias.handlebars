<h2>Adicionar categorias</h2>
<hr>
{{#each categorias}}
        <div class="card mt-2 col-12">
            <div class="card-body col-12">
                <h4>{{nome}}</h4>
                <small>{{slug}}</small><br>
                <small>Data de criação: {{date}}</small><br>
               <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-2 mx-auto">Editar</button> </a>
                 <form action="/admin/categorias/deletar/" method="post">
                <button class="btn btn-danger" value="{{_id}}" name="id" >Deletar</button>
            </form>
            </div>
       
        </div>
    {{else}}
    <h4>Não há categorias cadastradas</h4>
{{/each}}
<a href="/admin/categorias/add">
    <button class="btn btn-info">Adicionar categoria</button>
</a>